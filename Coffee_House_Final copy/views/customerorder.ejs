  <body>
    <a href="/login"><img class= "login" src="img/sign-in-button.png" height="60px" width="200px" alt="login"></a>
    <section class="ggImg">
      <img src="img/menu.jpg" height="400px" width="300px" alt="coffee menu">
  </section>
    <div class="container">
      <div class="welcome">
